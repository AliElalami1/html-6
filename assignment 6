    <script>
     var numberCount= 0;
     var a = 0;
     var b = 0;
     var c = 0;
     var numClicks = 0;
     var message = "The value of a is " + a;
     var message2 = "The value of b is " + b;
     var message3 = "The value of c is " + c;
     var reset = 0;
     b = 0;
    
function myFirstFunction() {
            a++;
            document.getElementById("showHere").innerHTML = a; }

function mySecondFunction() {
            a = a + 10;
document.getElementById("showHere").innerHTML = a; 
}
 
function myThirdFunction() {
        b++;
document.getElementById("showHere").innerHTML = b;
}
 
    function myFourthFunction() {
        b++;
        b = b + 10;
        document.getElementById("showHere").innerHTML = b;
    }
 
    function myFifthFunction() {
        c++;
        document.getElementById("showHere").innerHTML = c;
    }
 
    function mySixthFunction() {
        c++;
        c = c + 10;
        document.getElementById("showHere").innerHTML = c;
    }
 
     
     function showClicks() {
        numClicks++;
        message = "The value of a is " + a;
        document.getElementById("showHere").innerHTML = message;
 
     }
 
     function showBClicks() {
        numClicks++;
        message2 = "The value of b is " + b;
        document.getElementById("showHere").innerHTML = message2;
     }
 
     function showCClicks() {
        numClicks++;
        message3 = "The value of c is " + c;
        document.getElementById("showHere").innerHTML = message3;
 
     }
 
     function consoleReset() {
        document.getElementById("showHere").innerHTML = reset;
 
     }
 
 
